<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.javafx.learningjourney.controller.CourseController"
            prefHeight="400.0" prefWidth="600.0">
    <top>
        <FlowPane prefHeight="98.0" prefWidth="425.0" BorderPane.alignment="CENTER">
            <children>
                <ImageView>
                    <image>
                        <Image url="/static/ico/search.png"/>
                    </image>
                    <fitWidth>50</fitWidth>
                    <fitHeight>50</fitHeight>
                </ImageView>
                <TextField fx:id="searchTextField" prefHeight="70.0" prefWidth="202.0"/>
                <Button fx:id="searchButton" mnemonicParsing="false" text="Statistics"/>
                <Button fx:id="addButton" mnemonicParsing="false" text="+"/>
            </children>
        </FlowPane>
    </top>

    <center>
         <ScrollPane fx:id="scrollPane" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
             <content>
                 <GridPane fx:id="gridPane" prefHeight="425.0" prefWidth="422.0">
                     <columnConstraints>
                         <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                         <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                     </columnConstraints>
                     <rowConstraints>
                         <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                         <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                         <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                     </rowConstraints>
                 </GridPane>
             </content>
         </ScrollPane>
        <!--
                <Text fx:id="mainText" strokeType="OUTSIDE" strokeWidth="0.0" text="course" />
        -->
    </center>
</BorderPane>
